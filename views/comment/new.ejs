                <input class="form-control" type="text" name="text" placeholder="Comment's text">
            </div>
            <div class="form-group">
                <button class="btn btn lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
</div>

